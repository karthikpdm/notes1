Replication controller

apiVersion: v1
kind: ReplicationController
metadata:
  name: rc
  labels:
    env: production
spec:
  replicas: 2
  selector:
    matchlabels:
      env: prod
  template:
    metadata:
      name: mytempp
      labels:
        env: prod
    spec:
      containers:
      - name: c1
        image: ubuntu
        ports:
        - containerPoer: 80

